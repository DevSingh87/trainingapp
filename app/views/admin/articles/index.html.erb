<div id="page-wrap" style="padding-top:10px;">
 <div class="container-fluid">
  <%= link_to 'New Article', new_admin_article_path, :class => 'btn btn-warning' %>
    <div class="row-fluid">
					<div class="span12">
						<div class="box box-color box-bordered">
							<div class="box-title">
								<h3>
									<i class="icon-table"></i>
									Listing Articles
								</h3>
							</div>
							<div class="box-content nopadding">
							    <p class="notice"><%= notice %></p>
                                 <p class="alert"><%= alert %></p>
								<table class="table table-hover table-nomargin dataTable table-bordered">
									<thead>
										<tr>
											<th width="80%">Title</th>
											<th></th>
											<th></th>
											<th></th>
										  </tr>
									</thead>
									<tbody id="articles">

										<% @articles.each do |article| %>
										  <tr>
											<td><%= article.title %></td>
											<td><%= link_to 'Show', [:admin, article] %></td>
											<td><%= link_to 'Edit', edit_admin_article_path(article) %></td>
											<td><%= link_to 'Destroy', [:admin, article], method: :delete, data: { confirm: 'Are you sure?' } %></td>
										  </tr>
										<% end %>
										</tbody>
								</table>
								<div class="table-pagination" id="paginator">
									<%= paginate @articles, :theme => 'twitter-bootstrap' %>
								</div>
							</div>
						</div>
					</div>
				</div>
				</div>
				</div>
				