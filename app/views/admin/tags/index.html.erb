<% @tags.each do |tag| %>
  <tr>
    <td><%= tag.name %></td>
    <td><%= link_to 'Show', [:admin, tag] %></td>
    <td><%= link_to 'Edit', edit_admin_tag_path(tag) %></td>
    <td><%= link_to 'Destroy', [:admin, tag], method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

