<h1>Listing videos</h1>

<table>
  <tr>
    <th>Tutorial</th>
    <th>Title</th>
    <th>Video url</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @videos.each do |video| %>
  <tr>
    <td><%= video.tutorial %></td>
    <td><%= video.title %></td>
    <td><%= video.video_url %></td>
    <td><%= link_to 'Show', [:admin, video.tutorial, video] %></td>
    <td><%= link_to 'Edit', edit_admin_tutorial_video_path(video.tutorial, video) %></td>
    <td><%= link_to 'Destroy', [:admin, video.tutorial, video], method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

